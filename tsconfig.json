{
  "compilerOptions": {
    "lib": ["es2018"],
    "target": "es2018",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "inlineSources": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "outDir": "out"
  },
  "exclude": ["node_modules", "out", "coverage"]
}
